extends layout

block content
  div.container
      h1.page-header= title

      form.form-horizontal(method='POST', action='/')
        div.form-group
            label.col-md-2.control-label(for='data') Enter your JSON data
            div.col-md-10
                textarea#data.form-control(rows=20,name='data')

        div.form-group
            div.col-md-10.col-md-offset-2
                button.btn.btn-lg.btn-primary(type=submit) Prettify
